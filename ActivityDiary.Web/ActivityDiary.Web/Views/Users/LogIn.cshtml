@model ActivityDiary.ViewModels.Users.LoginViewModel

@{
    ViewBag.Title = "LogIn";
}

<h2>LogIn</h2>

@Html.ValidationSummary()
<form method="POST">
    @Html.TextBox("NameOrEmail", null, new {placeholder = "Name or Email"})
    @Html.Password("Password", null, new {placeholder = "Password"})
    <input type="submit" value="Login"/>
</form>