@model ActivityDiary.ViewModels.Users.SignUpViewModel

@{
    ViewBag.Title = "SignUp";
}

<h2>SignUp</h2>

<form method="POST">
    @Html.TextBox("Name", null, new {placeholder="Name"})
    @Html.TextBox("Email", null, new {placeholder="Email address"})
    @Html.Password("Password", null, new {placeholder="Password"})
    @Html.Password("ConfirmPassword", null, new {placeholder="Confirm Password"})
    <input type="submit" value="Create"/>
</form>