@using ActivityDiary.ViewModels.Users
@model SignUpViewModel

@{
    ViewBag.Title = "SignUp";
}

<h2>SignUp</h2>

@Html.ValidationSummary()
<form method="POST">
    @Html.TextBox("Name", null, new {placeholder = "Name"})<br/>
    @Html.TextBox("Email", null, new {placeholder = "Email address"})<br/>
    @Html.Password("Password", null, new {placeholder = "Password"})<br/>
    @Html.Password("ConfirmPassword", null, new {placeholder = "Confirm Password"})<br/>
    <input type="submit" value="Register"/>
</form>